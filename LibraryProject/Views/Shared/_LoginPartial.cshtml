@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav mr-auto" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav mr-auto">
        <li>
            @Html.ActionLink("Witaj," + User.Identity.GetUserName() + "!", "Index", "Profile", routeValues: null, htmlAttributes: new { @class = "nav-link", title = "Manage" })
        </li>
        <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
    </ul>
    }
}
else
{
<ul class="navbar-nav mr-auto">
    <li class="nav-item active">
        @Html.ActionLink("Zarejestruj", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link", id = "registerLink" })
    </li>
    <li class="nav-item active">
        @Html.ActionLink("Zaloguj", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link", id = "loginLink"})
    </li>
</ul>
}
